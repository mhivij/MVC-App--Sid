@model IEnumerable<Orders_Engine_module_2.Models.ProductCategory>

<p>
    <u> @Html.ActionLink("Insert New Product Category", "InsertNewProductCategory")</u>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductCategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteProductCategory", new { id=item.ProductCategoryID })
        </td>
    </tr>
}

</table>
