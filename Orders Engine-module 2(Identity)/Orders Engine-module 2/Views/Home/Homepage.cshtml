<div class="jumbotron" style="margin-left: -10%; margin-right: -10%">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox" style="align-content:center">
            <div class="item active">
                <img class="img-responsive center-block" src="@Url.Content("~/Content/Images/Discount.png")" alt="Chania">
            </div>

            <div class="item">
                <img class="img-responsive center-block" src="@Url.Content("~/Content/Images/Jeans.jpg")" alt="Chania">
            </div>

            <div class="item">
                <img class="img-responsive center-block" src="@Url.Content("~/Content/Images/Tv.jpg")" alt="Flower" style="max-width:30%;max-height:20% ">
            </div>

            <div class="item">
                <img class="img-responsive center-block" src="@Url.Content("~/Content/Images/Oldtv.jpg")" alt="Flower" style="max-width:30%;max-height:12%">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    </div>
    @model Orders_Engine_module_2.Models.ViewModel

    @{
        ViewBag.Title = "Homepage";
        <h2>@ViewBag.message</h2>
    }
    <div class="container">
        <div class="row">
            @if (@ViewBag.message == null)
            {
                foreach (var product in Model.Products)
                {
                    <div class="col-sm-4">
                        <div class="panel panel-primary">
                            @foreach (var dpm in Model.DiscountProductMap)
                            {
                                if (product.ProductID == dpm.ProductID)
                                {
                                    <div class="col-sm-4" style="max-width:12%;max-height:12%">
                                        <img src="@Url.Content("~/Content/Images/Discount.png")" align="top" height=12 width=12 />
                                    </div>
                                    break;
                                }
                            }

                            <div class="panel-heading">@Html.ActionLink(product.ProductName, "DisplayProductDetails", new { id = product.ProductID}, new { style = "color:black" })</div>
                            <div class="panel-body"><img src="@Url.Action("RenderImage", new { id = product.ProductID })" align="middle" height=80 width=80 /></div>
                            <div class="panel-footer">Price=@Html.DisplayFor(model => product.ProductPrice)</div>
                        </div>
                    </div>
                }
            }


        </div>
    </div>

<style>
.carousel {
    height: 50%;
    width: 100%;
    overflow:hidden;
    clear:both;
}
.carousel .carousel-inner {
    height:100%;    
}
</style>
