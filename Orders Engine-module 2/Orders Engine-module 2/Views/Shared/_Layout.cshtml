    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <style>
            /* Remove the navbar's default rounded borders and increase the bottom margin */
            .navbar {
                margin-bottom: 50px;
                border-radius: 0;
            }

            /* Remove the jumbotron's default bottom margin */
            .jumbotron {
                margin-bottom: 0;
            }

            /* Add a gray background color and some padding to the footer */
            footer {
                background-color: #f2f2f2;
                padding: 25px;
            }
        </style>
    </head>
    <body>
  
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
             
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="@Url.Action("Homepage","Home")">Home</a></li>
                         @if (!Session["session"].Equals(true))
                         {
                        <li><a href="@Url.Action("Homepage", "Home", new { Category = "Electronics" })">Electronics</a></li>
                        <li><a href="@Url.Action("Homepage", "Home", new { Category = "Clothing" })">Clothing</a></li>
                        <li><a href="@Url.Action("Homepage", "Home", new { Category = "Lifestyle" })">Lifestyle</a></li>
                        <li><a href="@Url.Action("Homepage", "Home", new { Category = "Accessories" })">Accessories</a></li>
                        <li><a href="@Url.Action("Homepage", "Home", new { Category = "Footwear" })">Footwear</a></li>
                         }
                         else
                         {
                            <li><a href="/../Products/ViewProducts">Products</a></li>
                            <li><a href="@Url.Action("ViewRecords", "Customers")">Customers</a></li>
                            <li><a href="@Url.Action("ViewOrders", "OrdersHistory")">OrdersHistory</a></li>
                            <li><a href="@Url.Action("ViewDiscount", "Discount")">Discount</a></li>
                         }
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @if (Session["session"].Equals(true))
                        {
                         <li><a href="@Url.Action("LogOut","Auth")"><span class="glyphicon glyphicon-user"></span> Sign Out</a></li>
                        }
                        else
                        {
                        <li><a href="/../Auth/Login"><span class="glyphicon glyphicon-user"></span> Sign In</a></li>
                        }
                        <li><a href="/../OrdersHistory/ViewOrders"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                    </ul>
                </div>
            </div>
        </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>